SELECT USERS.*, ADDRESS.ADDRESSTEXT 

FROM USERS, ADDRESS

WHERE USERS.ID=ADDRESS.USERID
AND USERS.ID=1

===========================================


SELECT 

U.NAMESURNAME AS ADSOYAD, 
U.EMAIL AS EMAIL,
U.GENDER AS CINSIYET, 
A.ADDRESSTEXT AS ACIKADRES,
C.COUNTRY AS ULKE

FROM USERS U, ADDRESS A, COUNTRIES C

WHERE U.ID=A.USERID AND C.ID=COUNTRYID   --AND C.COUNTRY LIKE "TURKIYE"

AND U.ID=1

--ORDER BY U.NAMESURNAME (TÃœM KULLANCILAR A-Z)

==============================================

SELECT 
U.NAMESURNAME, COUNT(A.ID) AS ADRESSAYISI, COUNTRY(C.ID) AS ULKESAYISI


FROM 

USERS U, ADDRESS A, COUNTRIES C

WHERE U.ID=A.USERID AND C.ID=COUNTRYID   

GROUP BY U.NAMESURNAME
HAVING COUNT(A.ID)>2










